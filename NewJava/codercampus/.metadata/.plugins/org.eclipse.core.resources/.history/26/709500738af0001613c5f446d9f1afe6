package net.javavideotutorials.example;

public class Operators {

  public static void main(String[] args) {
    // ==, !=, <, >, <=, >=
    
    int age = 12;
    
    // Once one thing is true or the first statement is true the remaining will be true. 
    // AND &&
    // true && true == true
    // false && true == false
    // true && false == false
    // false && false == false
    
    // Once one thing is true or the first statement is true the remaining will be true
    // OR ||
    // true || true == true
    // false || true == true
    // true || false == true
    // false || false == false
    
    if (age >=13 && age <= 19)
    {
      System.out.println("You are a teenager");
    }
    else
    {
      System.out.println("You are not a teenager");
    }
    
    // testing a condition with &&
    // if we used only one & then we will have gotten a null pointer error
    // because java will find out that the second statement is false whereas with the &&
    // it evaluates the first and moves on
    Object anObject = null;
    
    if (anObject != null && anObject.equals("2"))
    {
      System.out.println("Return nothing because statement is true");
    }
    
    //application of math operators;
    //So either upon even do one action and Odd another activity.
    //Array -> 10
    //1 % 2 = 1 -> output white
    //2 % 2 = 0 -> output grey
    //3 % 2 = 1 -> output white
    //4 % 2 = 0 -> output grey
    //5 % 2 = 1 -> output white
    //6 % 2 = 0 -> output grey
    //
    
    // + add
    // - sub
    // * multiplication
    // /
    // % modulo (Mod)
    
    //ternary operator
    //shortcut to reduce lines of code for if else statements
    
   // int result = (condition)? result1 : result2;
    
    int a = 10;
    int absValue = (a < 0)? -a : a;
    
    System.out.println("The value of a is: " + absValue);
    
    
  // similarly
    if (a < 0)
    {
     absValue = -a; 
    }
    else
    {
      absValue = a;
    }
  }

}
